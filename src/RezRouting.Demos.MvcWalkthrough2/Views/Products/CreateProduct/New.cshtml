@using RezRouting.AspNetMvc.UrlGeneration
@using RezRouting.Demos.MvcWalkthrough2.Controllers.Products
@model RezRouting.Demos.MvcWalkthrough2.Controllers.Products.CreateModel

@{
    ViewBag.Title = "Create Product";
}

<form method="POST" action="@(Url.ResourceUrl<CreateProductController>("Create"))">
    
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.Request.Name)
        @Html.TextBoxFor(x => x.Request.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Request.ManufacturerId, "Manufacturer")
        @Html.DropDownListFor(x => x.Request.ManufacturerId, Model.ManufacturerOptions, new { @class = "form-control" })
    </div>

    <input class="btn btn-primary" type="submit" value="Create" />


</form>
