@using RezRouting.AspNetMvc.UrlGeneration
@using RezRouting.Demos.MvcWalkthrough2.Controllers.Products.Product
@model EditProductModel

@{
    ViewBag.Title = "Update Product";
}

<form method="POST" action="@Url.ResourceUrl((EditProductController c) => c.Update(null))">

    @Html.ValidationSummary()

    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(x => x.Request.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Request.Name)
        @Html.TextBoxFor(x => x.Request.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Request.ManufacturerId, "Manufacturer")
        @Html.DropDownListFor(x => x.Request.ManufacturerId, Model.ManufacturerOptions, new { @class = "form-control" })
    </div>

    <input class="btn btn-primary" type="submit" value="Update" />

</form>
