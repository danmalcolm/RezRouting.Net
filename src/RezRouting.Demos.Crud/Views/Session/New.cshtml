@model RezRouting.Demos.Crud.Controllers.Session.Credentials

@{
    ViewBag.Title = "Log In";
}

<form method="POST" action="@Url.Action("Create", "Session")">

    <h1>Log In</h1>

    @Html.ValidationSummary()

    <div>@Html.LabelFor(x => x.UserName)</div>
    <div>@Html.TextBoxFor(x => x.UserName)</div>

    <div>@Html.LabelFor(x => x.Password)</div>
    <div>@Html.PasswordFor(x => x.Password)</div>

    <input type="submit" value="Log in" />

</form>
