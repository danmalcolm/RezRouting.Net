@model RezRouting.Demos.Tasks.Controllers.Home.HomeModel

@{
    ViewBag.Title = "Home";
}

<h2>Latest Products</h2>
<ul>
    @foreach (var product in Model.LatestProducts)
    {
        <li><a href="@Url.Action("Show", "ShowProduct", new { id = product.Id })">@product.Name</a></li>
    }
</ul>
<p><a href="@Url.Action("Index", "ListProducts")">View All</a></p>

