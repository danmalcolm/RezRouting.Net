@using RezRouting.Demos.MvcWalkthrough3.Controllers.Session
@model TaskModel<Credentials>

@{
    ViewBag.Title = "Sign In";
}

<form method="POST" action="@(Url.TaskUrl<SignInController>())">

    @Html.ValidationSummary()

    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-info">
                <div class="panel-body">
                    Use the user name <em>Bob</em>, <em>Mary</em> or <em>Jane</em> with password <em>123456</em>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Request.UserName)
                @Html.TextBoxFor(x => x.Request.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Request.Password)
                @Html.PasswordFor(x => x.Request.Password, new { @class = "form-control" })
            </div>
            <input class="btn btn-primary" type="submit" value="Log in" />
        </div>
    </div>

</form>
