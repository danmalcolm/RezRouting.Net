@using RezRouting.AspNetMvc.UrlGeneration
@using RezRouting.Demos.MvcWalkthrough1.Controllers.Products
@model EditModel

@{
    ViewBag.Title = "Update Product";
}

<form method="POST" action="@(Url.ResourceUrl<ProductsController>("Update"))">

    @Html.ValidationSummary()

    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(x => x.Input.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Input.Name)
        @Html.TextBoxFor(x => x.Input.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Input.ManufacturerId, "Manufacturer")
        @Html.DropDownListFor(x => x.Input.ManufacturerId, Model.ManufacturerOptions, new { @class = "form-control" })
    </div>

    <input class="btn btn-primary" type="submit" value="Update" />

</form>
